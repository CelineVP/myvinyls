<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Ajouter un vinyl</h3>
          <%= simple_form_for(@vinyl) do |f| %>
            <%= f.input :album, placeholder: "Titre de l'album"  %>
            <%= f.input :artist, label: 'Artiste', placeholder: "Nom de l'artiste" %>
            <%= f.input :commentaire %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: 'btn', value:'Ajouter' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
